public interface Effect {
    String getName();           // 효과 이름
    int getPower();             // 위력 (예: -20 = 20% 감소, 35 = 35% 증가)
    int getDuration();          // 지속 시간 (턴)
    String getType();           // 효과 종류 (상태이상, 스텟증감, 특수효과)

    void apply(AllyStatusManager target);  // 효과 적용
    void onTurnEnd(AllyStatusManager target); // 턴 종료 시 처리
    boolean isExpired();        // 만료 여부 체크
}
